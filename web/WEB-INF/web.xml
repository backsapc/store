<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>CardServlet</servlet-name>
        <servlet-class>Servlets.CardServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultTab</param-name>
            <param-value>Overview</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CardServlet</servlet-name>
        <url-pattern>/card</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>Servlets.CartServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>Servlets.IndexServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultCategory</param-name>
            <param-value>all</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartProcessorServlet</servlet-name>
        <servlet-class>Servlets.CartProcessorServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartProcessorServlet</servlet-name>
        <url-pattern>/cartProcess</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductPreviewServlet</servlet-name>
        <servlet-class>Servlets.ProductPreviewServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductPreviewServlet</servlet-name>
        <url-pattern>/preview</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LocalizeServlet</servlet-name>
        <servlet-class>Servlets.LocalizeServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocalizeServlet</servlet-name>
        <url-pattern>/localize</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>Servlets.CheckoutServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>Servlets.AuthServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>Servlets.AccountServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DateTimeServlet</servlet-name>
        <servlet-class>Servlets.DateTimeServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>DateTimeServlet</servlet-name>
        <url-pattern>/date</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CommentsServlet</servlet-name>
        <servlet-class>Servlets.CommentsServlet</servlet-class>
        <init-param>
            <param-name>defaultLanguage</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>defaultProduct</param-name>
            <param-value>SurfacePro</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentsServlet</servlet-name>
        <url-pattern>/comments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/WEB-INF/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ErrorPage</servlet-name>
        <jsp-file>/WEB-INF/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorPage</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>WebApp1</web-resource-name>
            <url-pattern>/checkout</url-pattern>
            <url-pattern>/auth</url-pattern>
            <url-pattern>/account</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>customer</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>customer</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login</form-login-page>
            <form-error-page>/error</form-error-page>
        </form-login-config>
    </login-config>
    <filter>
        <display-name>LogFilter</display-name>
        <filter-name>LogFilter</filter-name>
        <filter-class>Servlets.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

</web-app>